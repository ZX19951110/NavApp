<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.serviceslab.unipv.librarynavapp.classes.activities.ListArmadioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height= "60dp"
        android:text="Scegli l'armadio"
        android:id="@+id/chooseTV_armadio_list"
        android:textColor="@color/nav_welcome"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textSize="24dp"
        android:background="@color/colorPrimaryDark"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_armadio_list"
        android:layout_below="@id/chooseTV_armadio_list"/>
    <ProgressBar
        android:id="@+id/list_armadio_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
